{{#content "pageStyles"}}
    <link type="text/css" rel="stylesheet" href="//layout.jquery-dev.com/lib/css/layout-default-latest.css" />

    <style type="text/css">
        /* remove padding & scrolling from panes that are 'containers' for nested layouts */
        .ui-layout-center, .ui-layout-east {
            border:   0; /* cosmetic */
            padding:  0;
            overflow: hidden;
        }
    </style>

    <!-- Synchro CSS (required to host Synchro Web UX) -->
    <link rel="stylesheet" type="text/css" href="/app/stylesheets/synchro.css">

    <style>
      div.synchro {
        height: 100%;
      }
      /* Bootstrap doesn't show disabled buttons as disabled */
      button[disabled] {
        color:lightgray;
      }
    </style>
{{/content}}

{{#content "pageScripts"}}
    <script type="text/javascript" src="//code.jquery.com/ui/1.9.2/jquery-ui.js"></script>
    <script type="text/javascript" src="//layout.jquery-dev.com/lib/js/jquery.layout-latest.js"></script>
    <script src="https://unpkg.com/esprima@~3.0/dist/esprima.js"></script>
    <script src="/studio/script/ace/ace.js" charset="utf-8"></script>
    <script src="/studio/script/dev-support.js" charset="utf-8"></script>
    <!-- BootBox  (required to host Synchro Web UX) -->
    <script src="/app/script/bootbox.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () 
        {
            onDocumentReady();
        });
    </script>
{{/content}}

<div class="ui-layout-north">
    <h3 style='display: inline;'>Synchro UX Builder</h3>
    <a href="#" class="btn btn-primary btn-sm pull-right" role="button" onClick="updateView();"><span class="glyphicon glyphicon-refresh"></span> Update View</a>
    <a href="#" class="btn btn-primary btn-sm pull-right" style="margin-right: 10px;" role="button" onClick="selectControlText();"><span class="glyphicon glyphicon-search"></span> Select</a>
    <a href="#" class="btn btn-primary btn-sm pull-right" style="margin-right: 10px;" role="button" onClick="selectControl();"><span class="glyphicon glyphicon-eye-open"></span> Select</a>    
</div>

<div class="ui-layout-west">
    <h4>Project</h4>
    <!-- List group -->
    <div id="modules" class="list-group">
        {{#each files}}
        <a href="#"  class="list-group-item" module="{{this}}" onClick="return onLoadModule('{{this}}');">{{this}}</a>
        {{/each}}
    </div>
</div>

<div class="ui-layout-center">

    <div id="editor" class="middle-center">// This is the code window</div>
    <div class="middle-north">
        <h4 id='synchro_title'>UX Preview</h4>
        <!-- Main Synchro container -->
        <div id="synchro_container" class="container synchro"></div>
    </div>

</div>

<div class="ui-layout-east">

    <div class="right-center">
        <h4>Inspector</h4>
        <div class="form-group">
          <label for="height">Height:</label>
          <input id="height" type="text" class="form-control" oninput="propChange(this, 'height')">
        </div>
        <div class="form-group">
          <label for="width">Width:</label>
          <input id="width" type="text" class="form-control" oninput="propChange(this, 'width')">
        </div>
    </div>
    <div class="right-south">
        <h4>Controls</h4>
        <div class="list-group">
          <a href="#" class="list-group-item"><span class="glyphicon glyphicon-pencil"></span>&nbsp;Edit</a>
          <a href="#" class="list-group-item"><span class="glyphicon glyphicon-font"></span>&nbsp;Text</a>
          <a href="#" class="list-group-item"><span class="glyphicon glyphicon-unchecked"></span>&nbsp;Button</a>
          <a href="#" class="list-group-item"><span class="glyphicon glyphicon-list-alt"></span>&nbsp;Stack Panel</a>
          <a href="#" class="list-group-item"><span class="glyphicon glyphicon-th-list"></span>&nbsp;List</a>
          <a href="#" class="list-group-item"><span class="glyphicon glyphicon-stop"></span>&nbsp;Rectangle</a>
          <a href="#" class="list-group-item"><span class="glyphicon glyphicon-resize-horizontal"></span>&nbsp;Slider</a>
          <a href="#" class="list-group-item"><span class="glyphicon glyphicon-picture"></span>&nbsp;Image</a>
          <a href="#" class="list-group-item"><span class="glyphicon glyphicon-globe"></span>&nbsp;Web View</a>
        </div>
    </div>

</div>

<!-- The Synchro Web UX code -->
<script src="/app/script/synchro.js"></script>
