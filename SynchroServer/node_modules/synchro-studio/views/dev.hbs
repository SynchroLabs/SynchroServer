<div class="ui-layout-north">
    <nav id="mainToolbar" class="navbar-inverse notdebugging" style="width: 100%;" >
      <div class="container-fluid">
        <a class="navbar-brand" href="/">Synchro API</a>
        <b class="navbar-text" id="module"></b>
        <button class="btn btn-default navbar-btn" id="save" onClick="onSaveModule();" style="display: none;"><span class="glyphicon glyphicon-floppy-disk"></span> Save</button>
