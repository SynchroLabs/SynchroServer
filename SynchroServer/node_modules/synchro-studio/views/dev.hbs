    </script>
{{/content}}

<!-- Property binding modal -->

<div class="modal fade" id="bindingModal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="bindingModalTitle">Binding</h4>
      </div>
      <div class="modal-body">
        <form>
          <div class="form-group">
            <label for="modalPropValue" id="modalPropValueLabel">Property Value</label>
            <input type="text" class="form-control" id="modalPropValue">
          </div>
          <fieldset id="tokenModifiers">
            <div class="form-group">
              <label class="control-label">Token modifiers</label>
              <div class="checkbox" style="margin-top: 0px;">
                <label>
                  <input id="tokenModifierOneTime" type="checkbox" onclick="onBindingTokenOneTimeClick(this)"/> One-time binding (^)
                </label>
              </div>
              <div class="checkbox">
                <label>
                  <input id="tokenModifierNegate" type="checkbox" onclick="onBindingTokenNegateClick(this)"/> Negate binding value (!)
                </label>
              </div>
            </div>
          </fieldset>
          <div class="form-group">
            <label for="modalViewModel">View Model</label>
            <div id="modalViewModel" style="height: 200px;"></div>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" id="bindingModalSave">Save changes</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<!-- Body -->

<div class="ui-layout-north">
    <h3 style='display: inline;'>Synchro UX Builder</h3>
    <a href="#" class="btn btn-primary btn-sm pull-right" style="margin-right: 10px;" role="button" onClick="selectControl();"><span class="glyphicon glyphicon-eye-open"></span> Select</a>    
</div>

<div class="ui-layout-west">
    <h4>Project</h4>
    <!-- List group -->
    <div id="modules" class="list-group">
        {{#each files}}
        <a href="#"  class="list-group-item" module="{{this}}" onClick="return onLoadModule('{{this}}');">{{this}}</a>
        {{/each}}
    </div>
</div>

<div class="ui-layout-center">

    <div id="editor" class="middle-center">// This is the code window</div>
    <div class="middle-north">
        <h4 id='synchro_title'>UX Preview</h4>
        <!-- Main Synchro container -->
        <div id="synchro_container" class="container synchro"></div>
    </div>

</div>

<div class="ui-layout-east">

    <div class="right-center">
        <h4>Inspector</h4>
        <div class="panel-group">
          <div class="panel panel-default" id="widget-container-control-panel">
            <div class="panel-heading">
              <h4 class="panel-title">
                <a role="button" data-toggle="collapse" href="#collapse1" id="control-type">Control</a>
              </h4>
            </div>
            <div id="collapse1" class="panel-collapse collapse in">
              <div class="panel-body" id="widget-container-control"></div>
            </div>
          </div>
          <div class="panel panel-default" id="widget-container-binding-panel">
            <div class="panel-heading">
              <h4 class="panel-title">
                <a role="button" data-toggle="collapse" href="#collapse2">Binding</a>
              </h4>
            </div>
            <div id="collapse2" class="panel-collapse collapse in">
              <div class="panel-body" id="widget-container-binding"></div>
            </div>
          </div>
          <div class="panel panel-default" id="widget-container-common-panel">
            <div class="panel-heading">
              <h4 class="panel-title">
                <a role="button" data-toggle="collapse" href="#collapse3">Common</a>
              </h4>
            </div>
            <div id="collapse3" class="panel-collapse collapse in">
              <div class="panel-body" id="widget-container-common"></div>
            </div>
          </div>
        </div>
    </div>
    <div class="right-south">
        <h4>Controls</h4>
        <div id="control-list" class="list-group">
          <div class="list-group-item" id="edit"><span class="glyphicon glyphicon-pencil"></span>&nbsp;Edit</div>
          <div class="list-group-item" id="text"><span class="glyphicon glyphicon-font"></span>&nbsp;Text</div>
          <div class="list-group-item" id="button"><span class="glyphicon glyphicon-unchecked"></span>&nbsp;Button</div>
          <div class="list-group-item" id="stackpanel"><span class="glyphicon glyphicon-list-alt"></span>&nbsp;Stack Panel</div>
          <div class="list-group-item" id="listview"><span class="glyphicon glyphicon-th-list"></span>&nbsp;List</div>
          <div class="list-group-item" id="rectangle"><span class="glyphicon glyphicon-stop"></span>&nbsp;Rectangle</div>
          <div class="list-group-item" id="slider"><span class="glyphicon glyphicon-resize-horizontal"></span>&nbsp;Slider</div>
          <div class="list-group-item" id="image"><span class="glyphicon glyphicon-picture"></span>&nbsp;Image</div>
          <div class="list-group-item" id="webview"><span class="glyphicon glyphicon-globe"></span>&nbsp;Web View</div>
        </div>
    </div>

</div>

