          </div>
          <div class="form-group">
            <input id="newCommandName" class="form-control" placeholder="new command name" type="text"/>
          </div>
          <div class="form-group">
            <label>Command Parameters</label>
            <div class="row">
              <div class="col-xs-6">
                <input id="commandParamName1" class="form-control" placeholder="parameter" type="text"/>
              </div>
              <div class="col-xs-6">
                <input id="commandParamValue1" class="form-control" placeholder="value" type="text"/>
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="row">
              <div class="col-xs-6">
                <input id="commandParamName2" class="form-control" placeholder="parameter" type="text"/>
              </div>
              <div class="col-xs-6">
                <input id="commandParamValue2" class="form-control" placeholder="value" type="text"/>
              </div>
            </div>
          </div>
          <div class="form-group">
            <div class="row">
              <div class="col-xs-6">
                <input id="commandParamName3" class="form-control" placeholder="parameter" type="text"/>
              </div>
              <div class="col-xs-6">
                <input id="commandParamValue3" class="form-control" placeholder="value" type="text"/>
              </div>
            </div>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" id="commandModalSave">Save changes</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

