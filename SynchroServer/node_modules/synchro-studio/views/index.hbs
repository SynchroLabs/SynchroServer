<div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/">Synchro API</a>
        </div>
        <!--/.navbar-collapse -->
    </div>
</div>

<!-- Main jumbotron for a primary marketing message or call to action -->
<div class="jumbotron">
    <div class="container">
        <h1>Synchro API Server</h1>
        <p>
            This is the Synchro.io API server, providing test and sample Synchro apps.
        </p>
    </div>
</div>

<div class="container">

    <div class="list-group">
        {{#each applications}}
            <div class="list-group-item" style="overflow: auto">
                <img style="float: right" src="https://api.qrserver.com/v1/create-qr-code/?size=150x150&data={{endpoint}}"/>
                <h4 class="list-group-item-heading">{{appDefinition.name}}</h4>
                <p class="list-group-item-text">{{appDefinition.description}}</p>
                <h5 class="list-group-item-text">API Endpoint: <i>{{endpoint}}</i></h5>
                <h5 class="list-group-item-text">
                    {{#if studioPath}}
                        <a href="{{studioPath}}">Edit/Debug</a>&nbsp;&nbsp;
                    {{/if}}
                    {{#if webAppPath}}
                        <a href="{{webAppPath}}"">Web App</a>
                    {{/if}}
                </h5>
            </div>
        {{/each}}
    </div>

    <hr>
    <footer>
        <p>&copy; Synchro Labs, Inc. 2016 - Node {{processVersion}}, Studio v{{packageVersion}}</p>
    </footer>
</div>
<!-- /container -->
